color ir_black
set whichwrap+=<,>,h,l,[,]
set expandtab
set softtabstop=2
set shiftwidth=2

autocmd FileType scala setlocal expandtab shiftwidth=4 softtabstop=4
autocmd FileType python setlocal expandtab shiftwidth=4 softtabstop=4 textwidth=0

set foldmethod=indent   "fold based on indent
set foldnestmax=10      "deepest fold is 10 levels
set nofoldenable        "dont fold by default
set foldlevel=1         "this is just what i use
